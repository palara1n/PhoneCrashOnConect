<Window x:Class="PhoneChargerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phone Charger App" Height="600" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#FF1F1F1F" Foreground="White" FontFamily="Segoe UI" FontSize="16">

    <Grid Margin="30">
        <!-- Background rectangle for status display -->
        <Border Background="#FF333333" CornerRadius="15" Padding="30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Title Text -->
                <TextBlock Text="Phone Charger" FontWeight="Bold" FontSize="24" 
                           HorizontalAlignment="Center" Margin="0,0,0,30" />

                <!-- Status display -->
                <Border Background="#FF444444" CornerRadius="10" Padding="25,15" Margin="0,0,0,20">
                    <TextBlock Name="StatusTextBlock" HorizontalAlignment="Center" TextAlignment="Center"
                               FontSize="18" FontWeight="Medium"/>
                </Border>

                <!-- Footer instructions -->
                <TextBlock Text="Make sure your phone is connected via USB." HorizontalAlignment="Center" 
                           Opacity="0.7" FontSize="14" TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
